<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39445A"
    android:orientation="vertical"
    tools:context=".MenuPrincipalConductor">

    <TextView
        android:id="@+id/textoBienvenidaConductor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conductor"
        android:textAlignment="center"
        android:fontFamily="@font/alice"
        android:textAllCaps="true"
        android:layout_marginTop="10dp"
        android:textSize="34sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="282dp"
        android:layout_height="190dp"
        android:layout_gravity="center_horizontal|center_vertical"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textviewLatitud"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/alice"
            android:gravity="center_vertical"
            android:text="Latitud: "
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_latitud"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edit_round"
            android:clickable="false"
            android:drawablePadding="10dp"
            android:fontFamily="@font/alice"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:paddingEnd="10dp"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textviewLongitud"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/alice"
            android:gravity="center_vertical"
            android:text="Longitud: "
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_longitud"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edit_round"
            android:clickable="false"
            android:drawablePadding="10dp"
            android:fontFamily="@font/alice"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:paddingEnd="10dp"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/guardar"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/boton_redondo"
        android:fontFamily="@font/alice"
        android:onClick="actualizar_coordenadas"
        android:text="Actualizar Coordenadas"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bot_registroAdmin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/boton_redondo"
        android:fontFamily="@font/alice"
        android:onClick="registrarAdministrador"
        android:text="Registrar Administrador"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bot_cerrarSesion"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/boton_redondo"
        android:fontFamily="@font/alice"
        android:onClick="cerrarSesion"
        android:text="Cerrar SesiÃ³n"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>