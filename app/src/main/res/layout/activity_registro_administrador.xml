<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39445A"
    android:orientation="vertical"
    tools:context=".RegistroAdministrador">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="282dp"
        android:layout_height="190dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="322dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:fontFamily="@font/alice"
        android:text="Registrar Administrador Asociado"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textviewUsuario"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/alice"
            android:gravity="center_vertical"
            android:text="Usuario Administrador: "
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ingresoUsuario"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_round"
            android:drawableLeft="@drawable/edit_user"
            android:drawablePadding="10dp"
            android:fontFamily="@font/alice"
            android:hint="Usuario"
            android:inputType="textPersonName"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingEnd="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textviewPlaca"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/alice"
            android:gravity="center_vertical"
            android:text="Placa del carro: "
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ingresoPlaca"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_round"
            android:drawableLeft="@drawable/edit_nombre"
            android:drawablePadding="10dp"
            android:fontFamily="@font/alice"
            android:hint="Placa"
            android:inputType="textPersonName"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingEnd="10dp" />
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/guardar"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/boton_redondo"
        android:fontFamily="@font/alice"
        android:onClick="guardarInforamcion"
        android:text="Guardar InformaciÃ³n"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/regresar"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/boton_redondo"
        android:fontFamily="@font/alice"
        android:onClick="regresar"
        android:text="Regresar"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</LinearLayout>